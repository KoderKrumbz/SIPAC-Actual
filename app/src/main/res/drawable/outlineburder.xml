<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the outline (border) -->
    <solid android:color="#FFFFFF" />  <!-- Background color, can be transparent -->

    <!-- Border properties -->
    <stroke
        android:color="#000000"
        android:width="1dp" />

    <!-- Optionally, set rounded corners -->
    <corners android:radius="8dp" />  <!-- Corner radius (optional) -->

    <!-- Optionally, set padding inside the layout -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>